DROP TABLE IF EXISTS actions CASCADE;
CREATE TABLE actions (
    action_id BIGINT GENERATED ALWAYS AS IDENTITY PRIMARY KEY,                      -- ID 칰nico para cada acci칩n
    site_id BIGINT NOT NULL,                                                        -- ID del sitio al que pertenece la acci칩n
