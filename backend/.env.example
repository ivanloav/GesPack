# ===========================
# 🚀 NestJS App Settings
# ===========================
PORT=5000

# ===========================
# 🔐 CORS / Frontend
# ===========================
FRONTEND_URL=http://localhost:3000

# ===========================
# 🛢️ Database (PostgreSQL)
# ===========================
DB_HOST=GesPack-DB
DB_PORT=5432
DB_USER=gespack_user
DB_PASSWORD=secretpass
DB_NAME=gespack_db

# Si usas DATABASE_URL (opcional en lugar de vars separadas)
# DATABASE_URL=postgres://gespack_user:secretpass@GesPack-DB:5432/gespack_db

# ===========================
# 🔑 JWT / Seguridad
# ===========================
JWT_SECRET=my-super-secret-key
JWT_EXPIRES_IN=3600s

# ===========================
# 🧪 Entorno
# ===========================
NODE_ENV=development
